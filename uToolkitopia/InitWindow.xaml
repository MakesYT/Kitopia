<Window x:Class="Kitopia.InitWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             ShowActivated="False"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" ShowInTaskbar="False" WindowStyle="None"
             d:DataContext="{d:DesignInstance localM:InitWindowsViewModel}"
             xmlns:localM="clr-namespace:Core.ViewModel;assembly=Core"
             Visibility="Hidden" 
             Title="MainWindows" Height="10" Width="10">
    
    <Grid>
       <ui:NotifyIcon x:Name="NotifyIcon" TooltipText="Kitopia" >
           <ui:NotifyIcon.Menu>
               
               <ContextMenu><!--ViewModel绑定无效-->
                   <MenuItem Header="退出" Click="MenuItem_Click" />
               </ContextMenu>
           </ui:NotifyIcon.Menu>
       </ui:NotifyIcon>

    </Grid>
</Window>