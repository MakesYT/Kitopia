<Window x:Class="Kitopia.InitWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             ShowActivated="False"
             mc:Ignorable="d" ShowInTaskbar="False" WindowStyle="None"
             d:DataContext="{d:DesignInstance localM:InitWindowsViewModel}"
             xmlns:localM="clr-namespace:Core.ViewModel;assembly=Core"
             xmlns:tray="http://schemas.lepo.co/wpfui/2022/xaml/tray"
             xmlns:services="clr-namespace:Kitopia.Services"
             Visibility="Hidden"
             Title="MainWindows" Height="10" Width="10">
    <Window.Resources>
        <services:BindingProxy x:Key="runRecordList" Data="{Binding}" />
    </Window.Resources>
    <Grid>
        <tray:NotifyIcon x:Name="NotifyIcon" TooltipText="Kitopia" >
            <tray:NotifyIcon.Menu>
               
                <ContextMenu DataContext="{StaticResource runRecordList}">
                    <MenuItem Header="退出" Command="{Binding Data.ExitCommand}" />
                </ContextMenu>
            </tray:NotifyIcon.Menu>
        </tray:NotifyIcon>

    </Grid>
</Window>