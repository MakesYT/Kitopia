<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:KitopiaAvalonia.Controls">
    <Design.PreviewWith>
        <controls:DraggableResizeableControl Width="200" Height="200">
            <Rectangle Fill="Red"></Rectangle>
        </controls:DraggableResizeableControl>
    </Design.PreviewWith>

    <Style Selector="controls|DraggableResizeableControl">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <ContentPresenter Name="Presenter" Content="{TemplateBinding Content}" />
                    <Border BorderThickness="2" BorderBrush="LightBlue" Name="ResizeSizeBoxBorder"
                            Width="{Binding #Presenter.Bounds.Width}" Height="{Binding #Presenter.Bounds.Height}" />
                </Panel>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
